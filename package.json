{
  "name": "costlocker-desktop",
  "productName": "Costlocker",
  "description": "Costlocker Tracking Desktop App",
  "author": "Costlocker",
  "version": "2018.07.16",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-osx": "electron-packager ./ --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-builder --win --publish never",
    "package-linux": "electron-packager ./ Costlocker --overwrite --asar --platform=linux --arch=x64 --icon=assets/icons/png/1024x2014.png --prune=true --out=release-builds"
  },
  "devDependencies": {
    "electron": "^2.0.2",
    "electron-builder": "^20.28.1",
    "electron-packager": "^12.1.0"
  },
  "dependencies": {
    "desktop-idle": "git+https://github.com/CudoVentures/node-desktop-idle.git#prebuild"
  },
  "build": {
    "appId": "com.github.costlocker.desktop",
    "win": {
      "target": [
        { "target": "nsis", "arch": ["ia32"] }
      ],
      "icon": "assets/icons/win/icon.ico",
      "publisherName": "Costlocker SE"
    },
    "nsis": {
      "installerIcon": "assets/icons/win/icon.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true,
      "include": "nsis/installer.nsh",
      "shortcutName": "Costlocker",
      "artifactName": "win-installer-x86-${version}.${ext}"
    }
  }
}
