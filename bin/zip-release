#!/bin/bash

set -u
set -e

ARCHIVE="$1.tar.gz"
DIR="Costlocker"

run() {
    (
        cd release-builds
        rename_release
        zip_release
    )
}

rename_release() {
    ls -lA
    mv Costlocker* $DIR
    ls -lA
}

zip_release() {
    echo "Creating archive $ARCHIVE:"
    tar -czf $ARCHIVE $DIR
}

run
